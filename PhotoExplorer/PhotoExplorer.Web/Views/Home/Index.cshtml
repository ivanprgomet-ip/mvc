@model  PhotoExplorer.Web.Models.UserDetailsViewModel
@using PhotoExplorer.Web.helpers;

<link href="~/Content/css/masonry.layout.css" rel="stylesheet" />

<div class="container">
    <h1 class="text-center">Photos</h1>
    <section class="row masoncontainer">
        @{
            foreach (var album in Model.Albums)
            {
                foreach (var photo in album.Photos)
                {
                    <a href="@Url.Action("Details","Photo",new {id=photo.Id },null)">
                        <img class="img-responsive masonitem" src="~/photos/@photo.FileName" alt="">
                    </a>
                }
            }
        }
    </section>
    <h1 class="text-center">Albums</h1>
    <section class="row">
        @{
            foreach (var album in Model.Albums)
            {
                <article class="album">
                    <div class="col-lg-4 col-md-4 col-xs-4">
                        <a href="@Url.Action("Details","Album",new {id=album.Id },null)">
                            <i class="glyphicon glyphicon-book" style="font-size:36px;"></i>
                        </a>
                        <div style="display:flex;flex-direction:column;">
                            <small style="font-weight:800">@album.Name</small>
                            <small>@album.DateCreated</small>
                            <small>@Html.ActionLink(@album.User.Username, "Details", "User", new { id = album.User.Id }, null)</small>
                        </div>
                    </div>
                </article>
            }
        }
    </section>
</div>
