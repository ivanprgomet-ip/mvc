@using (Html.BeginForm("Upload", "Photo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table class="table">

        @Html.AntiForgeryToken()
        <tr>
            <td>
                <h4>Upload photo</h4>
            </td>
        </tr>
        <tr>
            <td>
                <input type="file" name="photofiles" multiple />
            </td>
        </tr>
        <tr>

            <td>
                <input type="submit" value="Upload" class="btn btn-default" />
            </td>
        </tr>
    </table>
}
