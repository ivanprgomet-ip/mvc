@model PhotoExplorer.Web.Models.AlbumDetailsViewModel

<div class="container">
    <h2>@Model.Name</h2>
    @foreach (var photo in Model.Photos)
    {
        <article class="photo">
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <a class="thumbnail" href="@Url.Action("Details","Photo",new {id=photo.Id },null)">
                    <img class="img-responsive" src="~/photos/@photo.FileName" alt="">
                </a>
            </div>
        </article>
    }
</div>
